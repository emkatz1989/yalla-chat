<!--Message Form-->

</div>
</div>
<!--Display users online Box-->
<div id="usersOnline">
<p>Online Users</p>
<% @users.each do |user| %> 
	<% user.is_logged_in==true %>
	<%= user.username %>
<% end %>
</div> 


<!--Message Input Line -->

<div class="message">
<%=form_for @message, :remote => true do |f| %>
	<%=f.text_field :content, :rows => "3", :size =>"150" %>
	<%=f.hidden_field :user_id, :value => current_user.id %>
	<%=f.submit "Send message" %>
<% end %>
</div>
<div class="Button">
<%= link_to "Logout", user_logout_path%>
</div>
</div>







