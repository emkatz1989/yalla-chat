<h1> YallaChat </h2>
<!-- <messages form--remote => true submits form through Ajax -->
<div id="chatBox">
<% @messages.each do|message| %>
<p><%=message.user.username%>:<%= message.content %></p>
<% end %>
</div>
<div id="usersOnline">
<% @users.each do |user| %> 
<p> <%#=user.username if @is_login=true %> 
	<% @is_login %>
	<%= user.username %><p> 
<% end %>
</div> 
<%=form_for @message, :remote => true do |f| %>
	<%=f.text_field :content %>
	<%=f.hidden_field :user_id, :value => current_user.id %>
	<%=f.submit "Send" %>
<% end %>


