<div class="chat_page_wrapper">
<div class = "header_chat">
<h1> YallaChat! </h1>
<h2> Welcome, <%=current_user.username%>! </h2>
<!-- <messages form--remote => true submits form through Ajax -->
</div>

<div id="chat_container">
<!-- CHATBOX -->
<div class="chatBox">

<!-- if user is logged in, then say user just entered the room -->
<% @users.each do |user| %> 
<% user.is_logged_in==true %>
<p><%=user.username%> just entered the room. </p>
<% end %>

<!-- if user is logged out, then say user just left the room -->
<%# user.is_logged_in==false %> 
<%# users.each do |user| %>
<!-- <p><%#=user.username%> just left the room. </p>    -->
<%# end %> 



<!--message display-->

<% @messages.each do|message| %>
<p>(<%=message.created_at%>): <b><%=message.user.username%></b>: <%= message.content %></p> 
<% end %> 

